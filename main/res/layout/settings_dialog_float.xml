<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/settingDialogerViewsLayout"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/settingDialogerEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <NumberPicker
            android:id="@+id/settingsDialogerWindNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <NumberPicker
                android:id="@+id/settingsDialogerIntNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <NumberPicker
                android:id="@+id/settingsDialogerFloatNumberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_toRightOf="@id/settingsDialogerIntNumberPicker"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/settingDialogerOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Apply Change"
        android:padding="15sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settingDialogerViewsLayout"/>



</RelativeLayout>